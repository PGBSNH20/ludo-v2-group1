@page "{boardName?}"
@model Ludo.Web.Pages.GameModel
@{
}
<h2 id="groupName">@Model.BoardName</h2>
<h3 id="playerCount">Players: @Model.Board.Players.Count</h3>
<h3>Id: @Model.Board.Id</h3>

<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row" id="userInputRow">
        <div class="col-2">Enter player name:</div>
        <div class="col-4"><input type="text" id="userInput" /></div>
        <div class="col-4"><input type="button" id="userSubmit" value="Connect to game" /></div>
    </div>

    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <input type="button" id="sendButton" value="Roll Dice" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-6">
        <ul id="messagesList"></ul>
    </div>
</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>