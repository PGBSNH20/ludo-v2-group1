@page
@model Ludo.Web.Pages.NewGameModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers




<center>
<br />
<div class="card text-center" style="width: 25rem;">
    <div class="card-body">
        <h1 class="card-title">New Game</h1>
        <form method="post">
            Name
            <br/>
            <br/>
            <input asp-for="Board.BoardName" class="form-control"/>
            <br/>
            Players (Between 2 and 4)
            <br/>
            <br/>
            <input asp-for="Players" min="2" max="4" class="form-control" />
            <br/>
            <br/>
            <input type="submit" class="btn btn-primary" />
        </form>
    </div>
</div>
</center>